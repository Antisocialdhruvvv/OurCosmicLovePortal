{
    "siteName": "Our Cosmic Love Portal",
    "theme": "light",
    "enableDarkMode": true,
    "language": "en",
    "dateFormat": "DD-MM-YYYY",
    "timeFormat": "12h",
    "defaultAvatar": "assets/images/avatars/default.png",
    "musicEnabled": true,
    "backgroundMusic": "assets/sounds/chime.mp3",
    "enableAnimations": true,
    "soundEffects": true,
    
    "nicknameGenerator": {
        "enabled": true,
        "maxSuggestions": 5,
        "nicknameCount": 100,
        "allowCustomNames": true
    },

    "watchParty": {
        "enabled": true,
        "allowVideoUpload": false,
        "maxParticipants": 5
    },

    "loveMeterQuiz": {
        "enabled": true,
        "questionsCount": 10,
        "resultVariations": ["soulmates", "best friends", "passionate", "needs work"]
    },

    "journal": {
        "enabled": true,
        "maxEntriesPerDay": 5,
        "shareOption": true
    },

    "todoList": {
        "enabled": true,
        "maxTasks": 20
    },

    "shootingStarWishes": {
        "enabled": true,
        "maxWishes": 30,
        "wishRevealTime": "midnight"
    }
}
