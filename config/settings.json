{
    "siteName": "Our Cosmic Love Portal",
    "defaultTheme": "light",
    "enableDarkMode": true,
    "language": "en",
    "dateFormat": "DD-MM-YYYY",
    "timeFormat": "12h",
    "enableISODate": true,
    
    "defaultAvatar": "assets/images/avatars/default.png",
    "musicEnabled": true,
    "backgroundMusic": "assets/sounds/chime.mp3",
    "musicVolume": 0.5,
    "allowUserControl": true,
    "enableAnimations": true,
    "soundEffects": true,

    "nicknameGenerator": {
        "enabled": true,
        "maxSuggestions": 5,
        "nicknameCount": 100,
        "allowCustomNames": true,
        "categories": ["cute", "funny", "romantic", "mystical"]
    },

    "watchParty": {
        "enabled": true,
        "allowVideoUpload": false,
        "maxParticipants": 5,
        "supportedPlatforms": ["YouTube", "Netflix", "CustomLinks"]
    },

    "loveMeterQuiz": {
        "enabled": true,
        "questionsCount": 10,
        "resultVariations": ["soulmates", "best friends", "passionate", "needs work"],
        "customQuestions": []
    },

    "journal": {
        "enabled": true,
        "maxEntriesPerDay": 5,
        "shareOption": true
    },

    "todoList": {
        "enabled": true,
        "maxTasks": 20
    },

    "shootingStarWishes": {
        "enabled": true,
        "maxWishes": 30,
        "wishRevealTime": "midnight",
        "publicWishes": false
    }
}
